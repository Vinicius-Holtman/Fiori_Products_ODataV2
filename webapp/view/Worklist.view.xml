                            <c:Item text="{Name}" />
                        </m:ComboBox>
                    </template>
                </Column> -->
                <Column width="9rem">
                    <m:Label text="Image" />
                    <template>
                        <m:Link text="Show Image" href="{ProductPicUrl}" target="_blank" />
                    </template>
                </Column>
                <Column width="9rem">
                    <m:Label text="Details" />
                    <template>
                        <m:Button text="Show Details" />
                    </template>
                </Column>
                <Column width="7rem">
                    <m:Label text="Heavy Weight" />
                    <template>
                        <m:CheckBox selected="{
								path: 'Heavy',
								type: 'sap.ui.model.type.String'
							}" />
                    </template>
                </Column>
                <!-- <Column width="12rem">
                    <m:Label text="Main Category" />
